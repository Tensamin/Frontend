{
  "main": "build/electron.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf build && mkdir build && cp -r ../dist/* ./build/ && electron-forge package",
    "build:win": "powershell -NoLogo -NoProfile -Command \"New-Item -ItemType Directory -Force -Path build | Out-Null; Copy-Item ..\\dist\\* .\\build\\ -Recurse -Force; electron-forge package\"",
    "nixPatch": "nix-shell patch.nix && ./out/tensamin-linux-x64/tensamin",
    "test": "bunx @electron/asar extract ./out/tensamin-linux-x64/resources/app.asar ./packageTest"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/shared-types": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "39.2.3"
  }
}
